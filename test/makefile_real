PROG =	rscf

SRCS =	distributed_k_matrices.f90 k_point_matrix.f90 matrix.f90 \
	matrix_mapping.f90 numbers.f90 proc_mapping.f90 \
	scalapack_interfaces.f90 scf_step_real.f90

OBJS =	distributed_k_matrices.o k_point_matrix.o matrix.o matrix_mapping.o \
	numbers.o proc_mapping.o scalapack_interfaces.o  \
	scf_step_real.o

LIBS =-lblacs-openmpi -lblacsF77init-openmpi -lscalapack-openmpi -llapack -lblas	

CC = cc
CFLAGS = -O
FC = mpif90
FFLAGS = -std=f2003 -fcheck=all -O -Wall -Wextra -fbacktrace -g
F90 = mpif90
F90FLAGS = -std=f2003 -fcheck=all -O -Wall -Wextra -fbacktrace -g
LDFLAGS = -fbacktrace -g 

all: $(PROG)

$(PROG): $(OBJS)
	$(F90) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

clean:
	rm -f $(PROG) $(OBJS) *.mod

.SUFFIXES: $(SUFFIXES) .f90

.f90.o:
	$(F90) $(F90FLAGS) -c $<

distributed_k_matrices.o: matrix.o numbers.o
k_point_matrix.o: numbers.o
matrix.o: matrix_mapping.o numbers.o scalapack_interfaces.o
matrix_mapping.o: numbers.o proc_mapping.o
proc_mapping.o: 
scalapack_interfaces.o: numbers.o
scf_step_real.o: distributed_k_matrices.o numbers.o 
